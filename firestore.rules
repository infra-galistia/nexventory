rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all client-side writes. All mutations must go through the API.
    // Allow read for authenticated users for potential future read-only syncing.
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
